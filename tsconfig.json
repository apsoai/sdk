{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES6",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,           // Enable type declaration generation
    "declarationDir": "./dist"     // Output directory for type declarations
  },
  "include": ["src/**/*.ts", "types.d.ts"],
  "exclude": ["node_modules", "dist"]
}
